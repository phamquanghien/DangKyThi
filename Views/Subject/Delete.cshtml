@model QuanLyCaThi.Models.Subject

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>Are you sure you want to delete this Subject?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger w3-row"></div>
        <div class="form-group w3-row w3-margin-bottom">
            <label class="control-label w3-col l2">Khoá bảo mật</label>
            <input type="password" required name="SecurityCode" class="form-control w3-col l3" />
        </div>
        <input type="hidden" asp-for="SubjectID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </form>
</div>
